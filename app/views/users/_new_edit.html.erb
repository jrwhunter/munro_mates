<div class="form-horizontal">
  <%= form_for(@user) do |f| %>
  
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :name, {class: "col-sm-2 control-label"}%>
      <div class="col-sm-10">
        <%= f.text_field :name, {placeholder: "Name"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, {class: "col-sm-2 control-label"}%>
      <div class="col-sm-10">
        <%= f.email_field :email, {placeholder: "Email"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, {class: "col-sm-2 control-label"} %>
      <div class="col-sm-10">
        <%= f.password_field :password, {placeholder: "Password"} %>
      </div>
    </div>

    <% if @user.email == nil %>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, {placeholder: "Confirm password"} %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :club, {class: "col-sm-2 control-label"} %>
      <div class="col-sm-10">
        <%= f.text_field :club, {placeholder: "Club"} %>
      </div>
    </div>
<p>Tick the kinds of hills you are interested in finding mates for:</p>
    <div class="form-group">
      <%= f.label :munros, {class: "col-sm-2 control-label"} %>
      <div class="col-sm-10">
        <%= f.check_box :munros, {checked: @user.munros} %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :munro_tops, {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
        <%= f.check_box :munro_tops, {checked: @user.munro_tops} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :corbetts, {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
        <%= f.check_box :corbetts, {checked: @user.corbetts} %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :grahams, {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
        <%= f.check_box :grahams, {checked: @user.grahams} %> 
      </div>
    </div>
<p>Tick the following box if you want to be a potential mate for any of the clubs you are a member of::</p>
    <div class="form-group">
      <%= f.label :visible, {class: "col-sm-2 control-label"} %>
      <div class="col-sm-10">
        <%= f.check_box :visible, {checked: @user.visible} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <% if @user.email == nil %>
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
        <% else %>
          <%= f.submit "Modify my profile", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>

  <% end %>
</div>
