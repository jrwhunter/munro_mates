<header role="navigation">
  <div class="container">
    <div class="masthead">
      <h2 class="text-muted">Munro Mates</h2>
      <ul class="nav nav-justified">

        <!-- Logged in user - or sign in -->
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>  <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>

        <!-- Hills tables -->
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Hills  <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <%= render 'layouts/select_category' %>
              <% if current_user.admin %>
                <li class="divider"></li>
                <li><%= link_to "Upload", upload_hills_path %></li>
                <li><%= link_to "Delete", delete_all_hills_path %></li>
            <% end %>
            </ul>
          </li>
        <% end %>

        <!-- Users info -->
        <% if signed_in? %>
          <li><%= link_to "Users", users_path %></li>
        <% end %>

        <!-- Help-->
        <li><%= link_to "Help", help_path %></li>

      </ul>
    </div>
  </div>
</header>

